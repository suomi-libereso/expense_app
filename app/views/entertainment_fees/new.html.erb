<h1>接待交際費（一般）申請画面</h1>

<%= form_for([ @organization, @user, @entertainment_fee] ) do |f| %>
  <%= render 'shared/error_messages', object: @entertainment_fee %>
  <div class="form-group">
    <%= f.label :amount ,"金額"%>
    <%= f.text_field :amount, class: "form-control", id: :entertainment_fees_amount %>
  </div>
  
  <div class="form-group">
    <%= f.label :description ,"内容"%>
    <%= f.text_field :description, class: "form-control", id: :entertainment_fees_description %>
  </div>
  
    <%= f.hidden_field :type, :value =>'EntertainmentFee'%>
  
  <div class="actions">
    <%= f.submit "申請" %>
  </div>
<% end %>
